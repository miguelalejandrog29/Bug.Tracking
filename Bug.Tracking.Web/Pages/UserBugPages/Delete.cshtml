@page
@model Bug.Tracking.Web.Pages.UserBugPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Está seguro que desea eliminar este registro?</h3>

<div>
    <h4>Error de Usuario</h4>
    <hr />
    @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
    {
        <h6 class="text-danger">@ViewBag.ErrorMessage</h6>
        <hr />
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserBug.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserBug.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserBug.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserBug.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserBug.Project)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserBug.Project!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserBug.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserBug.User!.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="UserBug.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>